{
  "compilerOptions": {
    "strict": true,
    "module": "ES2022",
    "target": "ES2022",
    "outDir": "./x",
    "declaration": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "resolveJsonModule": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": [
        "./src/stories/demoApp/*"
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
}